<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.aldres.moneytracker.AuthActivity">

        <TextView
            android:id="@+id/auth_logo_text"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@id/auth_logo"
            android:singleLine="false"
            android:text="Allah is a bike"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:id="@+id/auth_logo"
            />

        <ImageButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:adjustViewBounds="false"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/colorTransparent"
            android:src="@drawable/gplus_button"
            android:text="Login"

            />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/bg_intro"
                    android:id="@+id/auth_bg_intro" />




</RelativeLayout>


